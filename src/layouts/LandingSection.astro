---
interface Props {
  title: string;
  id: string;
}

const { title, id } = Astro.props;
---

<section id=`${id}` class="py-36 px-10 sm:px-24 md:px-36 lg:px-48 xl:px-72 2xl:px-96">
  <h3 class="text-2xl sm:text-3xl lg:text-5xl 2xl:text-7xl font-black mb-20">
    <span class="text-n4xo-brown dark:text-n4xo-brown-dark font-extrabold">&gt;</span> {title}
  </h3>
  <slot />
</section>