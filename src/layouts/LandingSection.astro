---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="flex justify-center items-center h-screen">
  <div>
    <h3 class="text-xl sm:text-2xl md:text-4xl lg:text-6.5xl font-bold">
      <span class="text-n4xo-brown dark:text-n4xo-beige font-extrabold">&gt;</span> {title}
    </h3>
    <slot />
  </div>
</section>