---
interface Props {
  title: string;
  id: string;
}

const { title, id } = Astro.props;
---

<section id=`${id}` class="p-10">
  <h3 class="text-2xl sm:text-3xl font-black mb-20">
    <span class="text-n4xo-brown dark:text-n4xo-beige font-extrabold">&gt;</span> {title}
  </h3>
  <slot />
</section>